<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sf_detail_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:duration="800">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shimmer_poster_img"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:background="@color/shimmer_background"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/shimmer_title_moovies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:alpha="1.0"
                android:fontFamily="@font/cookit_regular"
                android:padding="4dp"
                android:text="@string/str_tittle"
                android:textColor="@color/shimmer_background"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/shimmer_poster_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shimmer_poster_img"
                app:layout_constraintVertical_bias="0.594" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="140dp"
            android:layout_height="18dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/shimmer_background"
            android:paddingHorizontal="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">

            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                layout="@layout/item_home_list_shimmer">
            </include>

            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                layout="@layout/item_home_list_shimmer">
            </include>

            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                layout="@layout/item_home_list_shimmer">
            </include>

        </LinearLayout>

        <TextView
            android:layout_width="140dp"
            android:layout_height="18dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:background="@drawable/shimmer_background"
            android:paddingHorizontal="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">

            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                layout="@layout/item_home_list_shimmer">
            </include>

            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"

                layout="@layout/item_home_list_shimmer">
            </include>

            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"

                layout="@layout/item_home_list_shimmer">
            </include>

        </LinearLayout>


    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>